# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.

# Please tweak the following variable definitions as needed by your
# project, except GTEST_HEADERS, which you can use in your own targets
# but shouldn't modify.

# Points to the root of Google Test, relative to where this file is.
# Remember to tweak this if you move this file.
GTEST_DIR	= C:/googletest/googletest
GPLUSPLUS	= g++
RM			= rm
USER_DIR	= .
APP_DIR		= ./../Src
INC_DIR		= ./../Include
SRC_DIR		= ./ut
LIBDEPS_DIR	= ./../.pio/libdeps/esp32-target
STUBS_DIR	= ./ut/stubs
HSM_DIR		= C:/Users/mhammer3/Documents/Kunden/mine/shutters/shutters/.pio/libdeps/esp32-target/cpp-State-Oriented-Programming

# Flags passed to the preprocessor.
# Set Google Test's header directory as a system directory, such that
# the compiler doesn't generate warnings in Google Test headers.
INC			+= -isystem $(GTEST_DIR)/include
INC			+= -isystem $(GTEST_DIR)
INC			+= -isystem $(APP_DIR)
INC			+= -isystem $(SRC_DIR)
INC			+= -isystem $(STUBS_DIR)
INC			+= -isystem $(LIBDEPS_DIR)/cpp-State-Oriented-Programming
INC			+= -isystem $(LIBDEPS_DIR)/MCP23017/src
INC			+= -isystem $(LIBDEPS_DIR)/107-Arduino-CriticalSection/src
INC			+= -isystem $(LIBDEPS_DIR)/arduino-timer/src
INC			+= -isystem $(INC_DIR)
INC			+= -DUNIT_TEST 

# Flags passed to the C++ compiler.
GPLUSPLUSFLAGS += -g -Wno-unused-variable -Wno-unused-parameter -Wno-unused-but-set-variable -Wall -Wextra -pthread

# All tests produced by this Makefile.  Remember to add new tests you
# created to the list.
TESTS = tests


# All Google Test headers.  Usually you shouldn't change this
# definition.
# GTEST_HEADERS = $(GTEST_DIR)/include/gtest/*.h /

# House-keeping build targets.

all : $(TESTS)

clean :
	$(RM) -rf $(USER_DIR)/*.o 
	$(RM) -rf $(USER_DIR)/*.gcno 
	$(RM) -rf $(USER_DIR)/*.css 
	$(RM) -rf $(USER_DIR)/*.gcda 
	$(RM) -rf $(USER_DIR)/*.exe 
	$(RM) -rf $(USER_DIR)/*.html
	$(RM) -rf $(USER_DIR)/*.config
	$(RM) -rf $(USER_DIR)/*.a
	$(RM) -rf $(USER_DIR)/Debug/*
	$(RM) -rf $(USER_DIR)/Release/*	

# Builds gtest.a and gtest_main.a.

# Usually you shouldn't tweak such internal variables, indicated by a
# trailing _.
# GTEST_SRCS_ = $(GTEST_DIR)/src/*.cc $(GTEST_DIR)/src/*.h $(GTEST_HEADERS)

# For simplicity and to avoid depending on Google Test's
# implementation details, the dependencies specified below are
# conservative and not optimized.  This is fine as Google Test
# compiles fast and for ordinary users its source rarely changes.
gtest-all.o :
	g++ $(INC) $(GPLUSPLUSFLAGS) -c $(GTEST_DIR)/src/gtest-all.cc
	
gtest_main.o :
	g++ $(INC) $(GPLUSPLUSFLAGS) -c $(GTEST_DIR)/src/gtest_main.cc
	
test_shutters.o :
	$(GPLUSPLUS) $(INC) $(GPLUSPLUSFLAGS) -c $(SRC_DIR)/test_shutters.cpp
	
hsm.o :
	$(GPLUSPLUS) $(INC) $(GPLUSPLUSFLAGS) -c $(LIBDEPS_DIR)/cpp-State-Oriented-Programming/hsm.cpp

Shutter.o :
	$(GPLUSPLUS) $(INC) $(GPLUSPLUSFLAGS) -fprofile-arcs -ftest-coverage -c $(APP_DIR)/Shutter.cpp

tests : gtest-all.o gtest_main.o test_shutters.o hsm.o Shutter.o
	$(GPLUSPLUS) $(INC) $(GPLUSPLUSFLAGS) -lpthread $^ -lgcov -o $@

